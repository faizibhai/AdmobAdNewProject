<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/mainLayout1"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:onClick="showintersitialAd"
        android:text="show first interstitial "
        android:layout_centerInParent="true"
        android:id="@+id/firstIntersitial"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>


    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/firstIntersitial"
        android:onClick="showintersitialAd2"
        android:text="show second interstitial "
        android:layout_centerInParent="true"
        android:layout_marginBottom="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </Button>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/bannerLayout"
        android:background="@drawable/descriptionedit_layout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="5dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>